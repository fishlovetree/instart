@using Instart.Models
@model Instart.Models.Student

@{
    ViewBag.Title = "学员设置";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Partial("PartialSchool")
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="padding-top:75px;">
        <ol class="breadcrumb">
            <li><a href="/manage/student">成功学员</a></li>
            <li class="active">@ViewBag.Action</li>
        </ol>

        <form class="form-horizontal edit-container-width" id="mainForm" method="post" style="width:800px !important;" target="_self" action="/manage/student/set" enctype="multipart/form-data">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label class="col-sm-2 control-label">学员名称：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">英文名：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="NameEn" value="@Model.NameEn">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">座右铭：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Motto" value="@Model.Motto">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">院校背景：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Background" value="@Model.Background">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">头像：</label>
                <div class="col-sm-10">
                    <img src="@Model.Avatar" id="avatarPreview" style="width:200px;height:200px;border:1px solid #eee;" />
                    <input type="hidden" name="Avatar" value="@Model.Avatar" />
                    <a href="javascript:void(0)" onclick="$('#fileAvatar').click()" class="btn-link" style="position:relative;top:90px;">点击上传</a>
                    <input type='file' id='fileAvatar' name='fileAvatar' style='display:none;'>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">所属学部：</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.DivisionId, @ViewBag.DivisionList as IEnumerable<SelectListItem>, new
               {
                   @class = "form-control"
               })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">所属校区：</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.CampusId, @ViewBag.CampusList as IEnumerable<SelectListItem>, new
               {
                   @class = "form-control"
               })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">申请专业：</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.MajorId, @ViewBag.MajorList as IEnumerable<SelectListItem>, new
               {
                   @class = "form-control"
               })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">艺术导师：</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.TeacherId, @ViewBag.TeacherList as IEnumerable<SelectListItem>, new
               {
                   @class = "form-control"
               })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">基础：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Basis" value="@Model.Basis">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">申请学历：</label>
                <div class="col-sm-10">
                    <select id="ApplyType" name="ApplyType" class="form-control">
                        <option value="1">本科</option>
                        <option value="2">研究生</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">培训时长：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="LearnTime" value="@Model.LearnTime">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">学员介绍：</label>
                <div class="col-sm-10">
                    <textarea name="Introduce" id="Introduce" style="height:400px;">@Html.Raw(Model.Introduce)</textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Banner图片：</label>
                <div class="col-sm-10">
                    <img src="@Model.BannerImg" id="bannerImgPreview" style="width:80%;height:250px;border:1px solid #eee;" />
                    <input type="hidden" name="BannerImg" value="@Model.BannerImg" />
                    <a href="javascript:void(0)" onclick="$('#fileBannerImg').click()" class="btn-link" style="position:relative;top:115px;">点击上传</a>
                    <input type='file' id='fileBannerImg' name='fileBannerImg' style='display:none;'>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">专访视频简介：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Title, new
               {
                   @class = "form-control"
               })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">专访视频封面：</label>
                <div class="col-sm-10">
                    <img src="@Model.ImgUrl" id="imgPreview" style="width:80%;height:250px;border:1px solid #eee;" />
                    <input type="hidden" name="ImgUrl" value="@Model.ImgUrl" />
                    <a href="javascript:void(0)" onclick="$('#fileImg').click()" class="btn-link" style="position:relative;top:115px;">点击上传</a>
                    <input type='file' id='fileImg' name='fileImg' style='display:none;'>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">专访视频：</label>
                <div class="col-sm-10">
                    @if (!String.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <a class="video-play" style="float:right; margin-right: 25px;" href="javascript:void(0)" data-video="@Model.VideoUrl">播放</a>
                    }
                    <input type="hidden" name="VideoUrl" value="@Model.VideoUrl" />
                    <input type='file' id='fileVideo' name='fileVideo'>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input type="button" class="btn btn-success" value="提交" onclick="save()" />
                </div>
            </div>

        </form>

        <div id="videoModal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">视频预览</h4>
                    </div>
                    <div class="modal-body">
                        <video class="video-container" src="/i/movie.ogg" style="width:100%;height:400px;" controls="controls"></video>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Bottom{
<script>
    $(function () {
        var introduce = UE.getEditor('Introduce', {
            autoHeight: false
        });

        $('#fileAvatar').change(function () {
            imagePreview(this.files[0], $("#avatarPreview"));
        });

        $('#fileImg').change(function () {
            imagePreview(this.files[0], $("#imgPreview"));
        });

        $('#fileBannerImg').change(function () {
            imagePreview(this.files[0], $("#bannerImgPreview"));
        });

        $(".video-play").click(function () {
            var src = $(this).attr("data-video");
            if (src == "") {
                layer.msg("视频地址为空");
                return;
            }

            $(".video-container").attr("src", src);
            $("#videoModal").modal("show");
        });

        $("#ApplyType").val("@Model.ApplyType");
    })

    function save() {
        var name = $("input[name='Name']").val();
        if (name == '') {
            layer.msg('学员名称不能为空。');
            return;
        }
        $("#mainForm").ajaxSubmit({
            success: function (slt) {
                if (slt && slt.success) {
                    location.href = '@Url.Action("index", "student", new { area="manage"})';
                }
                else {
                    layer.msg(slt.message || '操作失败，请重试。');
                }
            }
        });
    }
</script>
}


