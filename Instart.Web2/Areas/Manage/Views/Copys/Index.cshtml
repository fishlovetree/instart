@using Instart.Models
@using Instart.Web2.Infrastructures
@model Instart.Models.Copys
@{
    ViewBag.Title = "文案管理";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @Html.Partial("PartialApply")
    <div class="col-sm-8 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="padding-top:75px;">
        <ol class="breadcrumb">
            <li><a href="/manage/copys">文案管理</a></li>
        </ol>
        @using (Html.BeginForm("Set", "Copys", new
        {
            area = "Manage"
        }, FormMethod.Post, new
        {
            enctype = "multipart/form-data",
            id = "mainForm",
            @class = "form-horizontal edit-container-width"
        }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">here&more：</label>
                <div class="col-sm-10">
                    <textarea name="HereMoreCopy" id="HereMoreCopy" rows="15">@Model.HereMoreCopy</textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">课程预约：</label>
                <div class="col-sm-10">
                    <textarea name="CourseApplyCopy" id="CourseApplyCopy" rows="15">@Model.CourseApplyCopy</textarea>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <input type="button" class="btn btn-primary" value="保存" onclick="save()" />
                </div>
            </div>
        }
    </div>
</div>
@section Bottom{
    <script>
        $(function () {
            UE.getEditor('HereMoreCopy');

            UE.getEditor('CourseApplyCopy');
        })

        function save() {
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        layer.msg('保存成功');
                    }
                    else {
                        layer.msg(slt.message || '操作失败，请重试');
                    }
                }
            });
        }

    </script>
}