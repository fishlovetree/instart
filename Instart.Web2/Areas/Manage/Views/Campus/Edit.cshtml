@using Instart.Models
@model Instart.Models.Campus

@{
    ViewBag.Title = "校区设置";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Partial("PartialSchool")
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="padding-top:75px;">
        <ol class="breadcrumb">
            <li><a href="/manage/campus">校区管理</a></li>
            <li class="active">@ViewBag.Action</li>
        </ol>

        @using (Html.BeginForm("Set", "Campus", new
        {
            area = "Manage"
        }, FormMethod.Post, new
        {
            enctype = "multipart/form-data",
            id = "mainForm",
            @class = "form-horizontal edit-container-width"
        }))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label class="col-sm-2 control-label">校区名称：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">英文名：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.EnName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">地址：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">电话：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new
       {
           @class = "form-control"
       })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">描述：</label>
                <div class="col-sm-10">
                    <textarea name="Introduce" id="Introduce" rows="10" class="form-control">@Model.Introduce</textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="button" class="btn btn-success" value="提交" onclick="save()" />
                </div>
            </div>
        }

    </div>
</div>


@section Bottom{
    <script>
        function save() {
            var name = $("input[name='Name']").val();
            if (name == '') {
                layer.msg('校区名称不能为空');
                return;
            }
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        location.href = '@Url.Action("index", "campus", new { area="manage"})';
                    }
                    else {
                        layer.msg(slt.message || '操作失败，请重试。');
                    }
                }
            });
        }

    </script>
}

