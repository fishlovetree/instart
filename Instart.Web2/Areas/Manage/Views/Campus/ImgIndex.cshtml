@using Instart.Models
@{
    ViewBag.Title = "校区图片";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .w_con_left {
        width: 100%;
        height: auto;
        float: left;
        margin: 0px;
    }

    .w_ico {
        padding: 0;
        margin: 0;
        width: 100%;
        height: auto;
        margin-top: 10px;
    }

        .w_ico li {
            float: left;
            width: 250px;
            list-style: none;
            text-align: center;
            margin-bottom: 20px;
        }

            .w_ico li img {
                width: 200px;
                height: 200px;
                position: relative;
                top: 5px;
                border: none;
            }

            .w_ico li p {
                margin-top: 10px;
            }
</style>
<div class="row">
    @Html.Partial("PartialSchool")
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="padding-top:75px;">
        <ol class="breadcrumb">
            <li><a href="/manage/campus">校区管理</a></li>
            <li class="active">校区图片</li>
        </ol>

        <div class="w_con_left">
            <ul class="w_ico">
                @if (ViewBag.ImgList != null)
                {
                    foreach (CampusImg item in ViewBag.ImgList)
                    {
                        <li class="icoli">
                            <img src="@item.ImgUrl" style="width:200px;height:200px;border:1px solid #eee;" class="img-thumbnail" /><p>
                                <a href="javascript:void(0)" onclick="deleteImg(this, @item.Id)" class="btn btn-default">删除</a>
                            </p>
                        </li>
                    }
                }
                <li class="icoli">
                    @using (Html.BeginForm("SetImg", "Campus", new
                    {
                        area = "Manage"
                    }, FormMethod.Post, new
                    {
                        enctype = "multipart/form-data",
                        id = "mainForm"
                    }))
                    {
                        <input type="hidden" id="CampusId" name="CampusId" value="@ViewBag.CampusId" />
                        <img src="" id="imgPreview" style="width:200px;height:200px;border:1px solid #eee;" /><p>
                            <input type='file' id='campusImg' name='campusImg' style="margin-left: 25px;">
                            <a href="javascript:void(0)" onclick="imgSubmit()" class="btn btn-success" style="margin-top:15px;">上传</a>
                        </p>
                    }
                </li>
            </ul>
        </div>

    </div>
</div>

@section Bottom{
    <script>
        function deleteImg(obj, id) {
            layer.confirm('确定删除该图片吗', function (index) {
                $.post('/manage/campus/deleteimg', { "id": id }, function (slt) {
                    if (slt && slt.success) {
                        $(obj).parent().parent().detach();
                    }
                    else {
                        layer.msg(slt.message || '操作失败，请重试');
                    }
                });

                layer.close(index);
            });
        }

        function imgSubmit() {
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        location.href = '@Url.Action("ImgIndex", "campus", new { area="manage"})' + '?CampusId=@ViewBag.campusId';
                    }
                    else {
                        layer.msg(slt.message || '操作失败，请重试。');
                    }
                }
            });
        }

        $('#campusImg').change(function () {
            imagePreview(this.files[0], $("#imgPreview"));
        });
    </script>
}

