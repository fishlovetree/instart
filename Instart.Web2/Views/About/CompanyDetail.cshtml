@using Instart.Models
@model Company
@{
    ViewBag.Title = "CompanyDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--banner展示图-->
@Html.Partial("PartialBanner", Instart.Models.Enums.EnumBannerPos.About)

<div class="maincont">
    <!--特色菜单-->
    @Html.Partial("PartialFeature", new KeyValuePair<string, string>("type", ViewBag.Type.ToString()))

</div>
<div class="maincont padding30 overflow">
    <div class="xue-left fl">
        <div class="course-item">
            <a href="#" class="cimg"><img src="@Model.ImgUrl" alt="" /></a>
            <div class="c-guide">
                <p> <b>@Model.Name</b> <span>@Model.NameEn</span> </p>
            </div>
            <div class="c-infos"> @Model.Introduce </div>
            <div class="c-guide">
                <p> <b>招聘职务</b> </p>
            </div>
            <div class="c-infos"> @Model.Postions</div>
            <div class="c-yue"><a href="javascript:void(0)" onclick="apply(@Model.Id)">实习预约</a></div>
        </div>
    </div>
    <div class="xue-right fr">
        <div class="claimlist">
            @Html.Raw(Model.Details)
        </div>
    </div>
</div>
@section Bottom
    {
    <script type="text/javascript">
        function apply(id) {
            layer.open({
                type: 2,
                title: '实习预约',
                shadeClose: true,
                shade: 0.8,
                area: ['800px', '480px'],
                content: '/about/companyapply?id=' + id //iframe的url
            });
        }
    </script>
    }
