@using Instart.Models
@model Instart.Models.AboutInstart
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--banner展示图-->
<div class="banner">
    <ul class="lubo_box">
        <li style="opacity: 1;filter:alpha(opacity=100);"><a style="background:url(@ViewBag.BannerUrl) center top no-repeat"></a></li>
    </ul>
</div>
<div class="maincont">
    <!--团队视频-->
    <div class="title">
        <h2>团队视频</h2>
    </div>
    <div class="teamvideo">
        <video controls="controls" poster="@Model.ImgUrl" src="@Model.VideoUrl" title=""></video>
    </div>
    <div class="title">
        <h2>关于Instart</h2>
    </div>
    <div class="borderkuan">
        <!--Instart XXXX-->
        <div class="inlist">
            <h2>Instart XXXX</h2>
        </div>
        <div class="inconts">
            @Html.Raw(Model.Introduce)
        </div>
        <!--Instart 团队-->
        <div class="inlist">
            <h2>Instart 团队</h2>
        </div>
        <div class="inconts">
            @Html.Raw(Model.Team)
        </div>
        <!--Instart 发展-->
        <div class="inlist">
            <h2>Instart 发展</h2>
        </div>
        <div class="inconts">
            @Html.Raw(Model.Develop)
        </div>
    </div>
    <!--Instart 特色-->
    <div class="title">
        <h2>Instart 特色</h2>
    </div>
    <div class="tese com-cont">
        <ul>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>Pre to Pro</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>学部制度</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>跨学科教学</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>Workshop</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>24小时工作室</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>实习推荐</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>艺术家孵化平台</b></a></div>
            </li>
            <li>
                <div class="teseimg"><a href="#"><img src="../yishaimg/lingshi/11.jpg" alt="" /><b>驻地项目</b></a></div>
            </li>
        </ul>
    </div>
    <!--课程推荐-->
    <div class="title">
        <h2>课程推荐</h2>
        <a href="/Course" class="more">查看全部&gt;&gt;</a>
    </div>
    <div class="recommend com-cont">
        <ul>
            @foreach (Course item in ViewBag.CourseList)
            {
                <li>
                    <div class="recimg">
                        <a href="/course/details/@item.Id">
                            <i></i>
                            <p>@item.Introduce</p>
                            <img src="@item.Picture" alt="@item.Name" />
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

