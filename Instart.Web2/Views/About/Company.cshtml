@using Instart.Models
@model List<Company>

@{
    ViewBag.Title = "ProToPro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--banner展示图-->
@Html.Partial("PartialBanner", Instart.Models.Enums.EnumBannerPos.About)

<div class="maincont">
    <!--特色菜单-->
    @Html.Partial("PartialFeature", new KeyValuePair<string, string>("type", ViewBag.Type.ToString()))

    <div class="course-info com-cont" id="main">
        <ul>
            @foreach (Company item in Model)
            {
                <li>
                    <div class="course-item">
                        <a href="/about/companydetail/@item.Id" class="cimg"><img src="@item.ImgUrl" alt="" /></a>
                        <div class="c-guide">
                            <p> <b>@item.Name</b> <span>@item.NameEn</span> </p>
                        </div>
                        <div class="c-infos">@Html.Raw(item.Introduce) </div>
                        <div class="c-guide">
                            <p> <b>招聘职务</b> </p>
                        </div>
                        <div class="c-infos"> @item.Postions</div>
                        <div class="c-yue"><a href="javascript:void(0)" onclick="apply(@item.Id)">实习预约</a></div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
<!--实习单位环境/作品 轮播图-->
<div class="workbo">
    <div class="bd">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="javascript:void(0)"><img src="@item.ImgUrl" /></a>
                </li>
            }

        </ul>
    </div>
    <div class="hd">
        <a class="prev"></a>
        <a class="next"></a>
    </div>
</div>

<div class="maincont">
    <!--课程推荐-->
    @Html.Partial("PartialRecommendCourse")
</div>

@section Bottom{
    <script>
        window.onload = window.onresize = function () {
            water("main");
        }
        $(".workbo").slide({ titCell: ".hd ul", mainCell: ".bd ul", autoPage: true, effect: "left", autoPlay: false, vis: 1, trigger: "click" });

        function apply(id) {
            layer.open({
                type: 2,
                title: '实习预约',
                shadeClose: true,
                shade: 0.8,
                area: ['800px', '480px'],
                content: '/about/companyapply?id=' + id //iframe的url
            });
        }
    </script>
}

