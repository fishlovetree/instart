@using Instart.Models
@model Program

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--banner展示图-->
@Html.Partial("PartialBanner", Instart.Models.Enums.EnumBannerPos.About)

<div class="maincont">
    <!--特色菜单-->
    @Html.Partial("PartialFeature", new KeyValuePair<string, string>("type", ViewBag.Type.ToString()))    
</div>
<div class="maincont padding30 overflow">
    <div class="xue-left fl">
        <div class="course-item">
            <a href="#" class="cimg"><img src="@Model.Picture" alt="" /></a>
            <div class="c-guide">
                <p> <b>项目名称</b> <span>@Model.Name</span> </p>
            </div>
            <div class="c-infos">@Model.Introduce</div>
            <div class="c-yue"><a href="javascript:void(0)" onclick="apply(@Model.Id)">项目咨询</a></div>
        </div>
    </div>
    <div class="xue-right fr">
        <div class="claimlist">
            @Html.Raw(Model.Details)
        </div>
    </div>
</div>
@section Bottom{
    <script type="text/javascript">
        function apply(id) {
            layer.open({
                type: 2,
                title: '项目咨询',
                shadeClose: true,
                shade: 0.8,
                area: ['800px', '430px'],
                content: '/about/programapply?id=' + id //iframe的url
            });
        }
    </script>
    }
