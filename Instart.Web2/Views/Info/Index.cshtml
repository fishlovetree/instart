                }
            </ul>
        </div>
        <div class="hd mar-top">
            <a class="prev"></a>
            <ul></ul>
            <a class="next"></a>
        </div>
    </div>
    <div class="title">
        <h2>iN院校分享</h2>
    </div>
    <div class="chenggong padding30" id="schooldiv">
        <div class="success-people com-cont noborder bd">
            <ul class="schoolul" style="width:100%">
                @foreach (Program item in ViewBag.programList)
                {
                    if (item.Type == Instart.Models.Enums.EnumProgramType.School)
