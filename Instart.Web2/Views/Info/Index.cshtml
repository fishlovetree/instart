@section Bottom{
    <script type="text/javascript">
        $("#practicediv").slide({ titCell: ".hd ul", mainCell: ".bd .practiceul", autoPage: true, effect: "left", autoPlay: false, scroll: 4, vis: 4, trigger: "click" });
        $("#applydiv").slide({ titCell: ".hd ul", mainCell: ".bd .applyul", autoPage: true, effect: "left", autoPlay: false, scroll: 4, vis: 4, trigger: "click" });
        $("#schooldiv").slide({ titCell: ".hd ul", mainCell: ".bd .schoolul", autoPage: true, effect: "left", autoPlay: false, scroll: 4, vis: 4, trigger: "click" });
        $("#actordiv").slide({ titCell: ".hd ul", mainCell: ".bd .actorul", autoPage: true, effect: "left", autoPlay: false, scroll: 4, vis: 4, trigger: "click" });
    </script>
}