@using Instart.Models
@model Instart.Models.Student

@{
    ViewBag.Title = "学员设置";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/manage/student">成功学员</a></li>
    <li class="active">@ViewBag.Action</li>
</ol>

<form class="form-horizontal edit-container-width" id="mainForm" method="post" target="_self" action="/manage/student/set" enctype="multipart/form-data">

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="col-sm-2 control-label">学员名称：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Name" value="@Model.Name">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">英文名：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="NameEn" value="@Model.NameEn">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">院校背景：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Background" value="@Model.Background">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">头像：</label>
        <div class="col-sm-10">
            <img src="@Model.Avatar" id="avatarPreview" style="width:80%;height:200px;border:1px solid #eee;" />
            <input type="hidden" name="Avatar" value="@Model.Avatar" />
            <a href="javascript:void(0)" onclick="$('#fileAvatar').click()" class="btn-link" style="position:relative;top:90px;">点击上传</a>
            <input type='file' id='fileAvatar' name='fileAvatar' style='display:none;'>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">OFFER：</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.SchoolId, @ViewBag.SchoolList as IEnumerable<SelectListItem>, new { @class="form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">申请专业：</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.MajorId, @ViewBag.MajorList as IEnumerable<SelectListItem>, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">艺术导师：</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.TeacherId, @ViewBag.TeacherList as IEnumerable<SelectListItem>, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">学员介绍：</label>
        <div class="col-sm-10">
            <textarea name="Introduce" id="Introduce" rows="10">@Model.Introduce</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">专访标题：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">视频封面：</label>
        <div class="col-sm-10">
            <img src="@Model.ImgUrl" id="imgPreview" style="width:80%;height:200px;border:1px solid #eee;" />
            <input type="hidden" name="ImgUrl" value="@Model.ImgUrl" />
            <a href="javascript:void(0)" onclick="$('#fileImg').click()" class="btn-link" style="position:relative;top:90px;">点击上传</a>
            <input type='file' id='fileImg' name='fileImg' style='display:none;'>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">专访视频：</label>
        <div class="col-sm-10">
            <input type="hidden" name="VideoUrl" value="@Model.VideoUrl" />
            <input type='file' id='fileVideo' name='fileVideo'>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="button" class="btn btn-primary" value="提交" onclick="save()" />
        </div>
    </div>
</form>

<script>
    var introduce = UE.getEditor('Introduce', {
        autoHeight: false
    });

    function save() {
            var name = $("input[name='Name']").val();
            if (name == '') {
                layer.msg('学员名称不能为空。');
                return;
            }
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        location.href = '@Url.Action("index", "student", new { area="manage"})';
                    }
                    else {
                        layer.msg(slt.message || '操作失败，请重试。');
                    }
                }
            });
        }

    $('#fileAvatar').change(function () {
        imagePreview(this.files[0], $("#avatarPreview"));
    });

    $('#fileImg').change(function () {
        imagePreview(this.files[0], $("#imgPreview"));
    });
</script>


