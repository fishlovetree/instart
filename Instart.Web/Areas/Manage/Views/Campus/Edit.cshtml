@using Instart.Models
@using Instart.Web.Infrastructures
@model Instart.Models.Campus

@{
    ViewBag.Title = "校区设置";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/manage/campus">校区管理</a></li>
    <li class="active">@ViewBag.Action</li>
</ol>

@using (Html.BeginForm("AddOrUpdate", "Campus", new { area = "Manage" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "mainForm", @class = "form-horizontal edit-container-width" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label class="col-sm-2 control-label">校区名称：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">英文名：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.EnName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">地址：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">电话：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">描述：</label>
        <div class="col-sm-10">
            <textarea name="Introduce" id="Introduce" rows="10">@Model.Introduce</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">校区图片：</label>
        <div class="col-sm-10">
            @if (Model.ImgUrls != null)
            {
                foreach (var item in Model.ImgUrls)
                {
                    <div>
                        <span>@item</span> <a href="javascript:void(0)" class="btn btn-primary" onclick="deleteFile(this, '@item')">删除</a>
                    </div>
                }
            }
            <div>
                <a href="javascript:void(0)" id="imgs" class="btn btn-primary" onclick="addFile('imgs')">点击添加文件</a>
            </div>
            <div id="_containerimgs"></div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="button" class="btn btn-primary" value="提交" onclick="save()" />
        </div>
    </div>
}


@section Bottom{
    <script>
        var introduce = UE.getEditor('Introduce', {
            autoHeight: false
        });

        function save() {
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        location.href = '@Url.Action("index", "campus", new { area="manage"})';
                    }
                    else {
                        alert(slt.message || '操作失败，请重试。');
                    }
                }
            });
        }

        function addFile(flag) {
            var div = $("<div style='width:100%;'></div>");
            var f = $("<input/>");
            f.attr("type", "file");
            f.attr("name", flag);
            div.append(f);
            var d = $("<input type='button'/>");
            d.attr("class", "btn btn-primary");
            d.attr("onclick", "deteFile(this, '" + flag + "')");
            d.attr("value", "删除");
            div.append(d);
            $("#_container" + flag).append(div);
            var a = $("#" + flag);
            if (a.text() == "点击添加文件") {
                a.text("继续添加文件");
            }
        }

        /*删除添加的文件选择器
-----------------------------------------------------------*/
        function deteFile(object, flag) {
            $(object).parent().detach();
            var a = $("#a" + flag);
            if ($("#_container" + flag).html() == '') {
                a.text("点击添加文件");
            }
        }

        function deleteFile(obj, imgUrl) {
            layer.confirm('确定删除该图片吗', function (index) {
                $.post('/manage/campus/deletefile', { "id": $("#Id").val(), "imgUrl": imgUrl }, function (slt) {
                    if (slt && slt.success) {
                        $(obj).parent().detach();
                    }
                    else {
                        layer.msg(slt.message || '操作失败，请重试');
                    }
                });

                layer.close(index);
            }); 
        }

    </script>
}

