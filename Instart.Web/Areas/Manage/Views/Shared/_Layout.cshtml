<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="instart-后台管理系统">
    <link rel="icon" href="/images/monkey.ico">
    <title>instart-后台管理系统</title>

    <link href="~/Content/themes/blueskin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet">
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/js/admin.js" type="text/javascript"></script>
    <script src="~/Content/themes/blueskin/js/jquery-2.0.3.min.js"></script>
    <script src="~/Content/themes/blueskin/js/bootstrap.min.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script type="text/javascript" charset="utf-8" src="/Content/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="/Content/ueditor/ueditor.all.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="/Content/jquery.form.js"></script>
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Head", false)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <span class="span-username">Instart管理后台</span>
                </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/" target="_blank">网站首页</a></li>                
                <li class="dropdown">
                    @*<img src="@Instart.Web.Models.CookieData.CurrentUser.Avatar" style="width:16px;height:16px;border-radius:50%;" />*@
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> @(Instart.Web.Models.CookieData.CurrentUser?.UserName) <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">基础设置</a></li>
                        <li><a href="#">修改密码</a></li>
                        <li><a href="javascript:void(0)" class="quit">退出</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li data-flag=""><a href="/manage/home">控制台</a></li>
                    <li data-flag="banner"><a href="/manage/banner">轮播管理</a></li>
                    <li data-flag="school"><a href="/manage/school">艺术院校</a></li>
                    <li data-flag="division"><a href="/manage/division">学部管理</a></li>
                    <li data-flag="major"><a href="/manage/major">专业管理</a></li>
                    <li data-flag="teacher"><a href="/manage/teacher">艺术导师</a></li>
                    <li data-flag="student"><a href="/manage/student">成功学员</a></li>
                    <li data-flag="course"><a href="/manage/course">课程管理</a></li>
                    <li data-flag="schoolapply"><a href="/manage/schoolapply">学校申请</a></li>
                    <li data-flag="courseapply"><a href="/manage/courseapply">课程申请</a></li>
                    <li data-flag="partner"><a href="/manage/partner">合作伙伴</a></li>
                    <li data-flag="about"><a href="/manage/about">关于instart</a></li>
                    <li data-flag="campus"><a href="/manage/campus">校区管理</a></li>
                    <li data-flag="works"><a href="/manage/works">作品管理</a></li>
                    <li data-flag="contact"><a href="/manage/contact">联系我们</a></li>
                    <li data-flag="user"><a href="/manage/user">用户管理</a></li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="padding-top:75px;">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Bottom", false)
</body>
</html>

<script>
    $(function () {
        $(".quit").click(function () {
            $.ajax({
                type: "post",
                url: "@Url.Action("quit", "account", new { area="manage"})",
                success: function () {
                    location.reload();
                }
            });
        });
    });

    (function () {
        //当前页导航高亮显示
        var isIndex = true;
        var href = location.href.toLowerCase();
        var $lis = $(".nav-sidebar").children("li");
        $.each($lis, function () {
            var nav = $(this).attr("data-flag");
            var arr = href.toLocaleLowerCase().split('/');
            var len = arr.length;
            if (arr[len - 1] == nav || arr[len - 2] == nav) {
                $(this).addClass("active");
                isIndex = false;
                return false;
            }
        });

        if (isIndex)
            $(".nav-sidebar li").eq(0).addClass("active");
    }());

</script>

