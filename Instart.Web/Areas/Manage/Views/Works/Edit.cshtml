@using Instart.Models
@using Instart.Web.Infrastructures
@model Instart.Models.Works

@{
    ViewBag.Title = "编辑作品";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddOrUpdate", "Works", new { area = "Manage" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "mainForm" }))
{
@Html.HiddenFor(m => m.Id)
<table class="table table-nobordered" style="top: 100px;">
    <tr>
        <td>图片：</td>
        <td><input type="file" name="WorksImage" /></td>
    </tr>

    <tr>
        <td>描述：</td>
        <td>@Html.TextAreaFor(m => m.Introduce, new { style = "width: 600px;height: 200px;" })</td>
    </tr>
    <tr>
        <!--下拉列表框,数据由后台初始化-->
        <td>所属专业：</td>
        <td>@Html.DropDownListFor(m => m.MajorId, @ViewBag.majorList as IEnumerable<SelectListItem>)</td>
    </tr>

    <tr>
        <td><input type="button" class="btn btn-primary" value="提交" onclick="save()" /></td>
    </tr>

</table>
}


@section Bottom{
    <script>
        var introduce = UE.getEditor('Introduce', {
            autoHeight: false
        });

        function save() {
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        location.href = '@Url.Action("index", "works", new { area="manage"})';
                    }
                    else {
                        alert(slt.message || '操作失败，请重试。');
                    }
                }
            });
        }

    </script>
}

