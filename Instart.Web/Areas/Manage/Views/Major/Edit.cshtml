@using Instart.Models
@using Instart.Web.Infrastructures
@model Instart.Models.Major

@{
    ViewBag.Title = "编辑专业";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("AddOrUpdate", "Major", new { area = "Manage" }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "onSuccess", OnFailure = "onFailure", OnComplete = "onComplete" }, new { enctype = "multipart/form-data", id = "myForm" }))
{
@Html.HiddenFor(m => m.Id)
<table class="table table-nobordered" style="top: 100px;">
    <tr>
        <td>专业名称：</td>
        <td>@Html.TextBoxFor(m => m.Name)</td>
    </tr>

    <tr>
        <td>专业图片：</td>
        <td><input type="file" name="MajorImage" /></td>
    </tr>

    <tr>
        <td>专业描述：</td>
        <td>@Html.TextAreaFor(m => m.Introduce, new { style = "width: 600px;height: 200px;" })</td>
    </tr>

    <tr>
        <td>就业前景：</td>
        <td>@Html.TextAreaFor(m => m.Prospect, new { style = "width: 600px;height: 200px;" })</td>
    </tr>
    <tr>
        <!--下拉列表框,数据由后台初始化-->
        <td>专业类型：</td>
        <td>@Html.DropDownListFor(m => m.Type, @ViewBag.typeList as IEnumerable<SelectListItem>)</td>
    </tr>
    <tr>
        <!--下拉列表框,数据由后台初始化-->
        <td>所属学部：</td>
        <td>@Html.DropDownListFor(m => m.DivisionId, @ViewBag.divisionList as IEnumerable<SelectListItem>)</td>
    </tr>

    <tr>
        <td><input type="submit" class="btn btn-primary" value="提交" /></td>
    </tr>

</table>
}


@section Bottom{
    <script>
        var introduce = UE.getEditor('Introduce', {
            autoHeight: false
        });

        var prospect = UE.getEditor('Prospect', {
            autoHeight: false
        });

        $(function () {
            $('form').ajaxForm({
                complete: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        });

        function onSuccess(a) {
            alert(a + "success");
        }

        function onFailure(a) {
            alert(a + "fail");
        }

        function onComplete(a) {
            alert(a + "complete");
        }

    </script>
}

