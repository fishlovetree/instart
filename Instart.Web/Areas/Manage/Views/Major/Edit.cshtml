@using Instart.Models
@using Instart.Web.Infrastructures
@model Instart.Models.Major

@{
    ViewBag.Title = "专业设置";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/manage/major">专业管理</a></li>
    <li class="active">@ViewBag.Action</li>
</ol>

@using (Html.BeginForm("AddOrUpdate", "Major", new { area = "Manage" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "mainForm", @class = "form-horizontal edit-container-width" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label class="col-sm-2 control-label">专业名称：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">英文名：</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.NameEn, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">专业图片：</label>
        <div class="col-sm-10">
            <input type="file" id="MajorImage" name="MajorImage" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">专业描述：</label>
        <div class="col-sm-10">
            <textarea name="Introduce" id="Introduce" rows="10">@Model.Introduce</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">就业前景：</label>
        <div class="col-sm-10">
            <textarea name="Prospect" id="Prospect" rows="10">@Model.Prospect</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">专业类型：</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Type, @ViewBag.typeList as IEnumerable<SelectListItem>)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">所属学部：</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.DivisionId, @ViewBag.divisionList as IEnumerable<SelectListItem>)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="button" class="btn btn-primary" value="提交" onclick="save()" />
        </div>
    </div>
}


@section Bottom{
    <script>
        var introduce = UE.getEditor('Introduce', {
            autoHeight: false
        });

        var prospect = UE.getEditor('Prospect', {
            autoHeight: false
        });

        function save() {
            $("#mainForm").ajaxSubmit({
                success: function (slt) {
                    if (slt && slt.success) {
                        location.href = '@Url.Action("index", "major", new { area="manage"})';
                    }
                    else {
                        alert(slt.message || '操作失败，请重试。');
                    }
                }
            });
        }

    </script>
}

