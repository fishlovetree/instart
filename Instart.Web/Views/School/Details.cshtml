@section Bottom{
    <script src="~/content/js/jquery.raty.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            //学员座右铭
            $(".peoplecont").hover(function () {
                $(this).find('span').addClass('aflex');
            }, function () {
                $(this).find('span').removeClass('aflex');
            })
            //院校详情
            $(".collmeun").on("click", 'a', function () {
                var len = $(this).index();
                $(this).addClass("active").siblings().removeClass("active");
                $(".collmeuncont").eq(len).show().siblings('.collmeuncont').hide()
            })

            //申请难度星星
            $("#stars").raty({
                number: 5, //多少个星星设置
                score: $("#stars").attr('flag'),
                targetType: 'number', //类型选择，number是数字值，hint，是设置的数组值
                path: 'content/images',
                size: 24,
                starHalf: 'star-half.png',
                starOff: 'star-off.png',
                starOn: 'star-on.png',
                precision: true, //是否包含小数
                readOnly: true
            });

            var country = $("#country").val();
            switch (country) {
                case '0':
                    $("#countrySpan").text("英国");
                    break;
                case '1':
                    $("#countrySpan").text("美国");
                    break;
                case '2':
                    $("#countrySpan").text("欧洲");
                    break;
                case '3':
                    $("#countrySpan").text("亚洲");
                    break;
                case '9':
                    $("#countrySpan").text("其他");
                    break;
            }
        })
    </script>
