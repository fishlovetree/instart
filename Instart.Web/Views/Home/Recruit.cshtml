@model Instart.Models.Recruit
@{
    ViewBag.Title = "Recruit";
}

<!--banner展示图-->
<div class="banner">
    <ul class="lubo_box">
        <li style="opacity: 1;filter:alpha(opacity=100);"><a style="background:url(@ViewBag.BannerUrl) center top no-repeat"></a></li>
    </ul>
</div>
<div class="maincont">
    <!--招贤纳士-->
    <div class="title">
        <h2>招贤纳士</h2>
    </div>
    <div class="borderkuan">
        <!--Instart XXXX-->
        <div class="inlist">
            <h2>加入我们</h2>
        </div>
        <div class="inconts">
            @Html.Raw(Model.JoinUs)
        </div>
        <!--在聘职位-->
        <div class="inlist">
            <h2>在聘职位</h2>
        </div>
        <div class="inconts">
            @Html.Raw(Model.Positions)
        </div>
        <!--联系方式-->
        <div class="inlist">
            <h2>联系方式</h2>
        </div>
        <div class="inconts">
            @Html.Raw(Model.Contacts)
        </div>
    </div>
</div>

