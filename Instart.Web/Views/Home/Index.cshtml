@using Instart.Models
@{
    ViewBag.Title = "Instart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner">
    <ul class="lubo_box">
        @foreach (Banner item in ViewBag.BannerList)
        {
            if (item.Type == Instart.Models.Enums.EnumBannerType.Image)
            {
                <li><a style="background:url(@item.ImageUrl) center top no-repeat"></a></li>
            }
            else if (item.Type == Instart.Models.Enums.EnumBannerType.Video)
            {
                <li style=" opacity: 1;filter:alpha(opacity=100);">
                    <a href="" style="background:url(@item.ImageUrl) center top no-repeat">
                        <video autoplay="autoplay" muted="muted" loop="loop" poster="@item.ImageUrl" title="">
                            <source class="video--mp4" src="@item.VideoUrl" type="video/mp4">
                        </video>
                    </a>
                </li>
            }
        }
    </ul>
</div>
<div class="maincont">
    <!--成功-->
    <div class="title">
        <h2>成功学员</h2>
        <a href="/student/index" class="more">查看全部&gt;&gt;</a>
    </div>
    <div class="success-people com-cont">
        <ul>
            @foreach (Student item in ViewBag.StudentList)
            {
                <li>
                    <div class="peoplecont">
                        <div class="top"><a href="#"><i></i><img src="@item.Avatar" alt="" /></a></div>
                        <dl>
                            <dt><a href="#">@item.Name</a></dt>
                            <dd class="pe1">录取专业：@item.MajorName</dd>
                            <dd class="pe2">offer：@item.SchoolName </dd>
                        </dl>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!--艺术导师-->
    <div class="title">
        <h2>艺术导师</h2>
        <a href="#" class="more">查看全部&gt;&gt;</a>
    </div>
    <div class="teacher com-cont">
        <ul>
            @foreach (Teacher item in ViewBag.TeacherList)
            {
                <li>
                    <div class="teacher-cont">
                        <div class="top"><a href="#"><i></i><img src="@item.Avatar" alt="@item.Name" /></a></div>
                        <dl>
                            <dt><a href="#">@(item.Name) @(item.NameEn)</a></dt>
                            <dd class="teac-m">
                                <p><span>@item.SchoolName</span><small>@item.SchoolNameEn</small></p>
                                <p><span>@item.MajorName</span><small>@item.MajorNameEn</small></p>
                            </dd>
                            <dd class="teac-b">@(item.DivisionName) @(item.DivisionNameEn)</dd>
                        </dl>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!--名校推荐-->
    <div class="title">
        <h2>名校推荐</h2>
        <a href="#" class="more">查看全部&gt;&gt;</a>
    </div>
    <div class="school com-cont">
        <ul>
            @foreach (School item in ViewBag.SchoolList)
            {
                <li>
                    <div class="school-cont">
                        <div class="top"><a href="#"><i></i><img src="@item.Avatar" alt="" /></a></div>
                        <div class="s-name">
                            <div class="s-name-left">
                                <dl>
                                    <dt>@item.Name</dt>
                                    <dd>@item.NameEn</dd>
                                    <p><span class="glaxfont">申请难度：</span>@item.Difficult</p>
                                    <p><img src="/content/images/star.png" /><img src="/content/images/star.png" /><img src="/content/images/star.png" /><img src="/content/images/star.png" /><img src="/content/images/star.png" /></p>
                                    <p><span class="glaxfont">录取比例：</span>87%</p>
                                </dl>
                            </div>
                            <div class="s-name-right"><a href="#"><img src="/content/images/lingshi/ucl.jpg" alt="" /></a></div>
                        </div>
                        <div class="yuanxiao">
                            <p><span><i class="glaxfont">国家:</i> @item.Country</span><span><i class="glaxfont">留学预算:</i> @item.Fee</span><span><i class="glaxfont">平均奖学金:</i> @item.Scholarship</span></p>
                            <p><span><i class="glaxfont">申请截止日期:</i> 早申: 11月11日</span><span>常规: 11月11日</span></p>
                            <p><span><i class="glaxfont">语言要求:</i> 本科: 托福92 / 雅思7.0</span><span>硕士: 托福92 / 雅思7.0</span></p>
                            <p><span><i class="glaxfont">优势专业:</i> 工业设计</span><span>工程创新</span><span>平面设计</span></p>
                            <div class="morea"><a href="#">院校详情</a></div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!--合作伙伴-->
    <div class="title">
        <h2>合作伙伴</h2>
    </div>
    <div class="teamwork com-cont">
        <ul>
            @foreach (Partner item in ViewBag.PartnerList)
            {
                <li>
                    <p><a href="@item.Link" target="_blank"><img src="@item.ImageUrl" alt="@item.Name" /></a></p>
                </li>
            }
        </ul>
    </div>
    <!--课程推荐-->
    <div class="title">
        <h2>课程推荐</h2>
        <a href="#" class="more">查看全部&gt;&gt;</a>
    </div>
    <div class="recommend com-cont">
        <ul>
            @foreach (Course item in ViewBag.CourseList)
            {
                 <li>
                     <div class="recimg">
                         <a href="#">
                             <i></i>
                             <p>@item.Introduce</p>
                             <img src="@item.Picture" alt="@item.Name" />
                         </a>
                     </div>
                 </li>
            }
        </ul>
    </div>
</div>