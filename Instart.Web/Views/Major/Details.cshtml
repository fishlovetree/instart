@using Instart.Models
@model Major
@{
    ViewBag.Title = "专业详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--banner展示图-->
<div class="banner">
    <ul class="lubo_box">
        @foreach (Banner item in ViewBag.BannerList)
        {
            if (item.Type == Instart.Models.Enums.EnumBannerType.Image)
            {
                <li><a style="background:url(@item.ImageUrl) center top no-repeat"></a></li>
            }
            else if (item.Type == Instart.Models.Enums.EnumBannerType.Video)
            {
                <li style=" opacity: 1;filter:alpha(opacity=100);">
                    <a href="" style="background:url(@item.ImageUrl) center top no-repeat">
                        <video autoplay="autoplay" muted="muted" loop="loop" poster="https://storage.googleapis.com/tate-digital/videos/winifred-knights/the-deluge.jpg" title="">
                            <source class="video--mp4" src="@item.VideoUrl" type="video/mp4">
                        </video>
                    </a>
                </li>
            }
        }
    </ul>
    <ul class="cir_box" style="left: 50%; margin-left: -40px; bottom: 3%;"><li style="" value="0" class=""></li><li style="" value="1" class="cir_on"></li></ul><div class="lubo_btn"></div>
</div>

<div class="maincont contpage overflow">
    <!--文章详情-->
    <div class="wen-left">
        <div class="list-cont list-left">
            <div class="top"><a href="#"><i></i><img src="@Model.ImgUrl" alt="" /></a></div>
            <dl>
                <dt><a href="#"><strong>@Model.Name</strong><small>@Model.NameEn</small></a></dt>
                <dd class="teac-m">@Model.Introduce</dd>
                <dd class="teac-b">@(Model.DivisionName) @(Model.DivisionNameEn)</dd>
            </dl>
        </div>
        <div class="list-cont list-left">
            <dl>
                <dt><a href="#"><strong>就业前景</strong><small>EMPLOYMENT PROSPECTS</small></a></dt>
                <dd class="teac-m" style="border-bottom:0;"> @Model.Prospect</dd>
            </dl>
        </div>
    </div>
    <div class="wen-right">
        <div class="claim comborder">
            <div class="comtitle">
                <dl>
                    <dt>申请要求</dt>
                    <dd>APPLICATION REQUEST</dd>
                </dl>
                <a href="#" class="di">申请咨询</a>
            </div>
            <div class="claimlist">
                @Html.Raw(Model.Apply)
            </div>
        </div>
        <div class="comborder">
            <div class="comtitle">
                <dl>
                    <dt>专业作品</dt>
                    <dd>SUBJECT WORKS</dd>
                </dl>
                <a href="#" class="di">作品评析</a>
            </div>
            <div class="workcont">
                @foreach (Works item in ViewBag.WorkList)
                {
                    <dl>
                        <dt><a href="#"><img src="@item.ImgUrl" alt="@item.Name" /></a></dt>
                        <dd>
                            @item.Introduce
                        </dd>
                    </dl>
                }
            </div>
        </div>
    </div>
</div>

